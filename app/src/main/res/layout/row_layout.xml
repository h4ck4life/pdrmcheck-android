<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ROW 1 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder_header">
            <TextView
                android:id="@+id/rowHeader"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="Summon No" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabelsummonNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Summon No" />

            <TextView
                android:id="@+id/rowValuesummonNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 2 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabelvehicleNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Vehicle No" />

            <TextView
                android:id="@+id/rowValuevehicleNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 3 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabelblacklistedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Blacklisted" />

            <TextView
                android:id="@+id/rowValueblacklistedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 4 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabeloffenceDataTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Offence Date" />

            <TextView
                android:id="@+id/rowValueoffenceDataTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 5 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabelnoncompoundTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Non Compoundable" />

            <TextView
                android:id="@+id/rowValuenoncompoundTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 6 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabeldistricTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="District" />

            <TextView
                android:id="@+id/rowValuedistricTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 7 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabeloffenceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Offence" />

            <TextView
                android:id="@+id/rowValueoffenceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 8 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabellocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Location" />

            <TextView
                android:id="@+id/rowValuelocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 9 -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cellborder">

            <TextView
                android:id="@+id/rowLabelamountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Amount" />

            <TextView
                android:id="@+id/rowValueamountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>

</LinearLayout>




